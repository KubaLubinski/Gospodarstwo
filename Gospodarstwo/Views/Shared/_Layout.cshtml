<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gospodarstwo</title>
    <link rel="stylesheet" href="~/css/bootstrap_colors.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs5/dt-1.13.1/datatables.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Gospodarstwo.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;700;900&family=Oswald:wght@300;400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">

</head>
<body class=color2>
    <header class="color1">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm  border-bottom box-shadow mb-3 color1">
            <div class="container-fluid color1  ">
                <a class="navbar-brand tekst1" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/graphic/logo.png" alt="Gospodarstwo" height="30" /></a>
                <button class="navbar-toggler " type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between ">
                    <ul class="navbar-nav flex-grow-1">
                        
                        @{
                            if (User.IsInRole("admin") || User.IsInRole("author"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link tekst1" asp-area="" asp-controller="Items"
                               asp-action="Index">Przedmioty</a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle tekst1" href="#" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                        Administracja
                                    </a>
                                    <ul class="dropdown-menu color1">
                                        <li class="nav-item">
                                            <a class="dropdown-item nav-link tekst1" asp-area=""
                                       asp-controller="Categories" asp-action="Index">Kategorie</a>
                                        </li>
                                        <li><hr class="dropdown-divider "></li>
                                        @if (User.IsInRole("admin"))
                                        {
                                        <li>
                                            <a class=" nav-link tekst1 " asp-area="" asp-controller="Items" asp-action="List">Lista przedmiotów</a>
                                        </li>
                                        <li>
                                            <a class=" nav-link tekst1 " asp-area="" asp-controller="Notes" asp-action="Index">Lista notatek</a>
                                        </li>
                                        }
                                        @if (User.IsInRole("author"))
                                        {
                                            <li>
                                                <a class="nav-link tekst1" asp-area="" asp-controller="Items" asp-action="Create">Dodaj nowy przedmiot</a>
                                            </li>
                                        }

                                    </ul>
                                </li>
                            }
                        }

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="color2">
     <div class="float-left text-align tekst2 ">                                  
      
            
         



     </div>
     <div class="container ">
        <main role="main" class="pb-3 ">
            @RenderBody()
        </main>
     </div>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container-fluid text-center pt-3 color1 tekst1">
            @DateTime.Now.Year - Moje Gospodarstwo -
            <p>
                <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none tekst1">Polityka prywatności</a>
            </p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
