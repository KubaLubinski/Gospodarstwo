@model Gospodarstwo.Models.Note

@{
    ViewData["Title"] = "Dodawanie notatki";
}

<h1 class="oswald tekst2">Dodawanie notatki</h1>
<hr />

<div class="row ">
    <div class="col-md-6 interspace">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" id="ItemId" name="ItemId" value="@ViewData["IdItem"]" />
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj notatkę" class="btn btn-warning" />
                <a asp-controller="Items" asp-action="Details" asp-route-id=@ViewData["IdItem"] class="btn btn-primary">Powrót do opisu przedmiotu</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
