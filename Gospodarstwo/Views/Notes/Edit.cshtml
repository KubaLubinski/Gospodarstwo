@model Gospodarstwo.Models.Note

@{
    ViewData["Title"] = "Edycja notatki";
}

<h1>Edycja Notatki</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NoteId" />
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <dt class = "col-sm-2">
            Autor notatki:
            
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User)
        </dd>
            </div>
            <div class="form-group">

                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.AddedDate)
                    </dt>

                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.AddedDate)
                    </dd>
            </div>
            <div class="form-group">
                 <input type="submit" value="Zapisz zmiany" class="btn btn-primary" />
                <a asp-action="Index" asp-route-id="@Model.NoteId">
                Powrót do notatek</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
